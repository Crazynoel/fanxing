<view class='border'>
  <view class='pictureBorder'>
    <image class='picture' src='{{picture}}'></image>
    <view class='price'>
      <text decode='true'>&nbsp;&nbsp;¥ <text class='priceBig'>{{price}}</text> /晚&nbsp;&nbsp;</text>
    </view>
    <view class='favoriteBorder' bindtap='addFavorite'>
      <image wx:if='{{favorite==true}}' src='/icons/favorite_red.png' class='favorite'></image>
      <image wx:elif='{{favorite==false}}' src='/icons/favorite_white.png' class='favorite'></image>
    </view>
  </view>
  <view class='info'>
    <text class='name'>{{name}}\n</text>
    <text class='description'>{{description}}\n</text>
  </view>
</view>